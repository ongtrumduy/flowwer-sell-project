{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@root/*": ["./*"],
      "@src/*": ["./src/*"],
      "@configs/*": ["./src/configs/*"],
      "@models/*": ["./src/models/*"],
      "@controllers/*": ["./src/controllers/*"],
      "@dbs/*": ["./src/dbs/*"],
      "@helpers/*": ["./src/helpers/*"],
      "@auth/*": ["./src/auth/*"],
      "@core/*": ["./src/core/*"],
      "@routes/*": ["./src/routes/*"],
      "@services/*": ["./src/services/*"],
      "@utils/*": ["./src/utils/*"],
      "@postman/*": ["./src/postman/*"],
      "@test/*": ["./src/test/*"],
      "@swagger/*": ["./src/swagger/*"]
    }
  },
  "include": ["src/**/*.ts", "server.ts"], // Bao gồm tất cả file .ts trong src và file server.ts
  "exclude": ["node_modules"]
}
